<Window x:Class="Remed_RealyCommand.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Remed_RealyCommand"
        xmlns:vm="clr-namespace:Remed_RelayCommand.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10">

            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Value:" FontSize="24"/>
                <TextBlock Text="{Binding Counter}" Margin="5,0,0,0" FontSize="24"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="5">
                <Button Command="{Binding DecrementCommand}" Content="Decrement" FontSize="24"/>
                <Button Command="{Binding IncrementExtCommand}" CommandParameter="5" Content="Increment" Margin="5,0,0,0" FontSize="24"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="5">
                <CheckBox Content="Enable increment" IsChecked="{Binding IsIncrementEnbaled}" FontSize="16"/>
            </StackPanel>

        </StackPanel>

    </Grid>
</Window>
